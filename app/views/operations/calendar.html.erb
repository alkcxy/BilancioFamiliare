<h1>Operations</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Type</th>
      <th>User</th>
      <th>Sign</th>
      <th>Amount</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @negative_operations.each do |operation| %>
      <%= render partial: 'operation_table', locals: { operation: operation } %>
    <% end %>
    <tr>
      <th colspan="4">Totale Uscite</th>
      <th><%= @negative_operations.sum('amount') %></th>
      <th colspan="3"></th>
    </tr>
    <% @positive_operations.each do |operation| %>
      <%= render partial: 'operation_table', locals: { operation: operation } %>
    <% end %>
    <tr>
      <th colspan="4">Totale Entrate</th>
      <th><%= @positive_operations.sum('amount') %></th>
      <th colspan="3"></th>
    </tr>

    <tr>
      <th colspan="4">Saldo</th>
      <th>
        <%= @positive_operations.sum('amount') - @negative_operations.sum('amount') %>
      </th>
      <th colspan="3"></th>
    </tr>
  </tbody>
</table>

<br>

<%= link_to 'New Operation', new_operation_path %>
