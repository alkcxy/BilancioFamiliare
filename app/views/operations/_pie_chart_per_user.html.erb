<% cache [id_and_maximum_updated_at(operations_per_type.where(user_id: user.id)), user, "pie_chart_per_user", interval] do %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= user.name %>
      </h3>
    </div>
    <div class="panel-body">
      <div class="row-fluid">
        <% { "Uscite": "-", "Entrate": "+"}.each do |k,v| %>
          <div class="col-md-6">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title"><%= k %></h3>
              </div>
              <div class="panel-body">
                <%= pie_chart tot_operations_per_type.where(sign: v, user_id: user.id).map { |o| [o.types_name, o.sum_amount] }, id: "chart-#{user.id}-#{k}" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
