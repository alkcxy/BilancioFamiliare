<%= form_for type, html: { class: "form-horizontal" } do |f| %>
  <%= render partial: 'layouts/components/error_messages', locals: { target: type } %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :master_type_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :master_type_id, step: 1, min: 1, class: "form-control", list: "master_list" %>
      <datalist id="master_list">
        <% @types.each do |type| %>
          <option value="<%= type.id %>"><%= type.name %></option>
        <% end %>
      </datalist>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end %>
